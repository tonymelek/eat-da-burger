<div class="conatiner-fluid">
    <div class="row ">
        <div class="col-12 align-self-center">
            <img class="d-block mx-auto my-3" src="./assets/img/burger.png" alt="Burger" srcset="">
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <h4 class="text-center mb-3">Burger Menu</h4>
            <table class="mx-auto">
                {{#each burgers}}
                {{#unless is_selected}}
                <tr>
                    <td class="mb-3" id={{id}}>{{burger_name}}</td>
                    <td> <a class="d-inline-block mx-3 btn  btn-dark" href="/api/devour/{{id}}">Devour it!</a> </td>
                </tr>
                {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-4">
            <h4 class="text-center mb-3">Devoured Burgers</h4>
            <table class="mx-auto">
                {{#each burgers}}
                {{#if is_selected}}
                <tr>
                    <td class="mb-3" id={{id}}>{{burger_name}}</td>
                    <td> <a class="d-inline-block mx-3 btn btn-info" href="/api/delete/{{id}}">Remove
                            it!</a> </td>
                </tr>

                {{/if}}
                {{/each}}
            </table>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            <div class="card mx-auto w-50 border-0">
                <div class=" mx-auto my-3 display-5">Add a burger to the menu</div>
                <form action="/newburger" method="post">
                    <div class="form-group mx-auto px-3">
                        <textarea name="burger" id="burger-box" rows="2" class="w-100 display-5"></textarea>
                    </div>
                    <div class="form-group mx-auto">
                        <button class="btn btn-lg btn-danger d-block mx-auto" type="submit">Add to Menu</button>

                </form>
            </div>
        </div>
    </div>
</div>